<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity_QuemSomos">

    <TextView
        android:id="@+id/textView2"
        android:layout_width="wrap_content"
        android:layout_height="42dp"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:text="QUEM SOMOS?"
        android:textColor="@android:color/black"
        android:textSize="24sp"
        android:textStyle="bold" />

    <ImageView
        android:id="@+id/imageView4"
        android:layout_width="112dp"
        android:layout_height="42dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        app:srcCompat="@drawable/gymimg" />

    <ImageView
        android:id="@+id/imageView5"
        android:layout_width="105dp"
        android:layout_height="42dp"
        android:layout_alignParentEnd="true"
        android:layout_alignParentTop="true"
        app:srcCompat="@drawable/gymimg" />

    <TextView
        android:id="@+id/textView4"
        android:layout_width="353dp"
        android:layout_height="394dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="18dp"
        android:layout_marginTop="75dp"
        android:text="O aplicativo GYMPLUS permite facilitar a comunicação entre o personal trainer e os alunos através de um ambiente virtual voltado para isso. Os usuários podem localizar e interagir através dos chats dos perfis apartir do momento que se deseja adquirir os serviços de determinado personal, possibilitando o contato direto com o mesmo."
        android:textColor="@android:color/background_dark"
        android:textSize="24sp"
        android:textStyle="italic" />
</RelativeLayout>